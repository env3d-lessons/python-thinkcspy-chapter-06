{
  "name": "Python with desktop, disable copilot",
  "image": "mcr.microsoft.com/devcontainers/universal:linux",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {}
  },   
  "postAttachCommand": "chmod 000 ~/.vscode-remote/extensions/github.copilot* && exit",
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "desktop"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",  // Python extension
        "ms-python.vscode-pylance",  // Pylance extension (optional, for better performance)        
        "github.copilot",
        "github.copilot-chat"
      ],
      "settings": {
        "python.pythonPath": "/usr/local/bin/python", // Path to Python interpreter
        "extensions.ignoreRecommendations": true,
        "github.copilot.enable": {"*":false} // Disable GitHub Copilot
      }    
    }
  }
}